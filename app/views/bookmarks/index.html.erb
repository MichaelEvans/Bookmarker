<% title "Bookmarks" %>

<div class="bookmarks">
  <% @bookmarks.each do |bookmark| %>
    <div class="bookmark">
      <h2><%= link_to bookmark.title, url_with_protocol(bookmark.url) %></h2>
      <div class="bookmark_controls">

        <% link_to "Edit", edit_bookmark_path(bookmark) %> 
        <%= link_to "Delete", bookmark, method: "delete", confirm: "Are you sure?", :class => "delete_button" %>
      </div>
    </div>
  <% end %>
</div>

